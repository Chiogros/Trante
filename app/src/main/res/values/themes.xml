<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows us to override night specific attributes in the values-night folder. -->
    <style name="NightAdjusted.Theme.Etomer" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.Etomer" parent="NightAdjusted.Theme.Etomer">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Etomer.SplashScreen" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.Etomer</item>
    </style>

</resources>